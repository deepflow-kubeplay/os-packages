FROM ghcr.io/deepflow-kubeplay/fedora-base:36 as os-fedora36

COPY packages.yaml .
RUN yq eval '.common[],.yum[],.fedora[],.fedora36[],.kubespray.common[],.kubespray.yum[]' packages.yaml > packages.list

RUN ARCH=$(uname -m) \
    && sort -u packages.list | xargs repotrack --destdir ${ARCH} \
    && createrepo -d ${ARCH}

FROM scratch
COPY --from=os-fedora36 /fedora /resources/nginx/fedora
COPY repos/Fedora-All-in-One.repo /resources/nginx/repos/Fedora-34-All-in-One.repo
